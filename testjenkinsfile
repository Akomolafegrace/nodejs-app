pipeline{
    agent { docker { image 'node:18' 
               args '-u root:root'}}

    stages{
        stage('Dep install'){
            
            steps{
                sh 'npm cache clean --force'
                sh 'npm install'
            }
        }
        stage('package'){
            steps{
                sh 'npm pack'
            }
        }
    }
} 